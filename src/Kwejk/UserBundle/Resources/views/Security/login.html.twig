{% extends "KwejkLayoutBundle::layout_auth.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    
  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" role="form">
  
    <h2 class="form-signin-heading">Panel logowania</h2>
  
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <input class="form-control" placeholder="Email" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    <input class="form-control" placeholder="Hasło" type="password" id="password" name="_password" required="required"  />

    <label class="checkbox">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </label>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" >{{ 'security.login.submit'|trans }}</button>
    <p>
    <h4>Jeśli nie masz jeszcze konta:</h4>
    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primarybtn-block">zarejestruj sie</a>
    </p>
    
  </form>

</div> <!-- /container -->


{% endblock body %}
